//		System.out.println("lastName : " + lastName);
//		System.out.println("dateOfBirth : " + dateOfBirth);
//		System.out.println("salary : " + salary);
//	}
}

public class EmpMan {
	public static void main(String[] args) {
		Employee employee = new Employee();
