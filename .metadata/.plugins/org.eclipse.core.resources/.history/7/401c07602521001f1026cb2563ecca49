package Assignment2;

class Employee {
	private int employeeId;
	private String firstName;
	private String lastName;
	private String dateOfBirth;
	private int salary;
	
	public Employee(int employeeId,String firstName,String lastName,String dateOfBirth,int salary) {
		this.employeeId =employeeId;
		this.firstName = firstName;
		this.lastName = lastName;
		this.dateOfBirth = dateOfBirth;
		this.salary = salary;
	}
	
	private void GetID(int employeeId) {
		return employeeId;
	}
	private void GetFN(String firstName){
		return firstName;
	}
	private void GetLn(String lastName){
		return lastName;
	}
	private void GetDOB(String dateOfBirth){
		return lastName;
	}
	private void GetSal(int salary) {
		return salary;
	}
	
	private void SETID(int employeeId) {
		if(employeeId > 0) {
			this.employeeId = employeeId;
		}else {
			System.out.println("invalid ID");
		}
	}
	private void SETFN(String firstName){
		if(firstName != null) {
			this.firstName = firstName;
		}else {
			System.out.println("invalid Fname");
		}
	}
	private void SETLn(String lastName){
		if(lastName != null) {
			this.lastName = lastName;
		}else {
			System.out.println("invalid Lname");
		}
	}
	private void SETDOB(String dateOfBirth){
		if(dateOfBirth != null) {
			this.dateOfBirth = dateOfBirth;
		}else {
			System.out.println("invalid DOB");
		}
	}
	private void SETSal(int salary) {
		if(salary > 0) {
			this.salary = salary;
		}else {
			System.out.println("invalid salary");
		}
	}
	
	public double calcbon() {
		return salary * 0.10;
	}
	
//	public void Display() {
